<Window x:Class="Lecture84_ArrayList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture84_ArrayList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Height="53" Margin="100,240,0,0" VerticalAlignment="Top" Width="168" FontSize="18" Click="btnAdd_Click"/>
        <Button x:Name="btnRemove" Content="Remove" HorizontalAlignment="Left" Height="53" Margin="294,240,0,0" VerticalAlignment="Top" Width="168" FontSize="18" Click="Button_Click_1"/>
        <Button x:Name="btnShow" Content="Show All" HorizontalAlignment="Left" Height="53" Margin="491,240,0,0" VerticalAlignment="Top" Width="168" FontSize="18" Click="Button_Click"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="44" Margin="100,178,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="559" FontSize="18" KeyDown="txtInput_KeyDown"/>
        <Label x:Name="lblStatusBar" Content="Status Bar" HorizontalAlignment="Left" Height="57" Margin="100,91,0,0" VerticalAlignment="Top" Width="196" FontSize="20"/>

    </Grid>
</Window>
